@{
    ViewData["Title"] = "Reports";
}

<!--begin::Toolbar-->
<div class="d-flex flex-wrap flex-stack my-5">
    <!--begin::Heading-->
    <h3 class="fw-bold my-2 text-primary fst-italic">
        Reports Dashboard 📊
    </h3>
    <!--end::Heading-->
</div>
<!--end::Toolbar-->
<!--begin::Row-->
<div class="row g-6 g-xl-9 mb-6 mb-xl-9">

    <!--begin::Col : Books-->
    <div class="col-md-6 col-lg-4 col-xl-3">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex justify-content-center text-center flex-column p-8">
                <a asp-action="Books" class="text-gray-800 text-hover-primary d-flex flex-column">
                    <div class="symbol symbol-100px mb-5 mx-auto">
                        <img src="~/assets/images/analysis.png" class="theme-light-show" alt="Books Report" />
                        <img src="~/assets/images/analysis.png" class="theme-dark-show" alt="Books Report" />
                    </div>
                    <div class="fs-4 fw-bold mb-2 badge bg-primary mx-auto">Books Overview 📚 </div>
                </a>
            </div>
        </div>
    </div>
    <!--end::Col-->
    <!--begin::Col : Rentals-->
    <div class="col-md-6 col-lg-4 col-xl-3">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex justify-content-center text-center flex-column p-8">
                <a asp-action="Rentals" class="text-gray-800 text-hover-primary d-flex flex-column">
                    <div class="symbol symbol-100px mb-5 mx-auto">
                        <img src="~/assets/images/analysis.png" class="theme-light-show" alt="Rentals Report" />
                        <img src="~/assets/images/analysis.png" class="theme-dark-show" alt="Rentals Report" />
                    </div>
                    <div class="fs-4 fw-bold mb-2 badge bg-success  mx-auto">Active Rentals 📖 </div>
                </a>
            </div>
        </div>
    </div>
    <!--end::Col-->
    <!--begin::Col : Delayed Rentals-->
    <div class="col-md-6 col-lg-4 col-xl-3">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex justify-content-center text-center flex-column p-8">
                <a asp-action="DelayedRentals" class="text-gray-800 text-hover-primary d-flex flex-column">
                    <div class="symbol symbol-100px mb-5 mx-auto">
                        <img src="~/assets/images/analysis.png" class="theme-light-show" alt="Delayed Rentals Report" />
                        <img src="~/assets/images/analysis.png" class="theme-dark-show" alt="Delayed Rentals Report" />
                    </div>
                    <div class="fs-4 fw-bold mb-2 badge bg-danger mx-auto">Overdue Rentals⏳ </div>
                  
                </a>
            </div>
        </div>
    </div>
    <!--end::Col-->

</div>
<!--end::Row-->
