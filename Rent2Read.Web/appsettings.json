{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=Rent2Read;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": { //is a logging library
    "MinimumLevel": "Error", //means only logs with level "Error" or higher (Error, Fatal) will be recorded.
    "Override": { // Override logs coming from Microsoft only log messages with level "Error" or higher
      "Microsoft": "Error"
    },
    "WriteTo": [
      {
        "Name": "File", //Defines the sink type →logs will be written to a text file
        "Args": { //settings for the file sink
          "path": "./logs/Rent2Read_.log",
          "rollingInterval": "Day", // Creates a new log file every day
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
          //Template for how each log entry will look: timestamp + message + new line + exception details
        }
      },
      {
        "Name": "File", //Another File sink(stores logs as JSON)
        "Args": {
          "path": "./logs/Rent2Read_.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, serilog" // Formats the logs in JSON → easier to deal with or understand
        }
      },
      {
        "Name": "MSSqlServer",//Specifies that the sink will write logs to SQL Server.
        "Args": {
          "connectionString": "Server=.;Database=Rent2Read;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true;",
          "tableName": "ErrorLogs",
          "schemaName": "logging",
          "autoCreateSqlTable": true, // Automatically create the table if it does not exist
          "ColumnOptionsSection": {
            //"removeStandardColumns": [ "MessageTemplate" ],//if you want to remove some default Serilog columns
            "customColumns": [ // Define additional custom columns for logging
              {
                "ColumnName": "UserId",
                "DataType": "nvarchar",
                "DataLength": "450"
              },
              {
                "ColumnName": "UserName",
                "DataType": "nvarchar",
                "DataLength": "256"
              }
            ]
          }
        },
        "restrictedToMinimumLevel": "Error"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName" // Adds the machine name where the app is running
    ],
    "Properties": {
      "ApplicationName": "Rent2Read.Web"
    }
  },

  "AllowedHosts": "*",
  "CloudinarySettings": {
    "Cloud": "",
    "ApiKey": "",
    "ApiSecret": ""
  },
  "MailSettings": {
    "Email": "",
    "DisplayName": "Rent2Read",
    "Password": "",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "WhatsAppConfigurations": {
    "PhoneNumberId": "",
    "AccessToken": ""
  }
}
